<article>
  <a href="/account"> &larr; Back to account</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <!-- editing form that can be filled out to edit your post -->
    <div>
      <h6>Edit Title:</h6>
      <input name="post-title" type="text" value="{{post.title}}" />
      <h6> Edit Game Name:</h6>
      <input name="game-name" type="text" value="{{post.game_name}}" />
      <h6>Edit Post Description:</h6>
      <input name="description" type="text" value="{{post.description}}" />
    </div>
    <div>
      {{post.helpful_count}} {{format_plural "helpful" post.helpful_count}}
      |
      {{post.unhelpful_count}} {{format_plural "unhelpful" post.unhelpful_count}}
      | 
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>
<!-- form used to add comments to a post -->
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>